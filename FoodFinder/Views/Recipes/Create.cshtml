@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Recipe

<h4>Add a new Recipe</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name:" , new { @class="customLabel"})
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Description, "Description:" , new { @class="customLabel"})
  @Html.EditorFor(model => model.Description)
  <br>
  @Html.Label("Select Restaurant", "Select Restaurant:")
  @Html.DropDownList("RestaurantId")
  <br>
  <input type="submit" value="Add new Recipe" class="htmlButton" />
}
<p>@Html.ActionLink("Show all Recipes", "Index",null, null, new { @class="htmlButton"})</p>