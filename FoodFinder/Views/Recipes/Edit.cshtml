@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Recipe

<h1>EDIT:</h1>

<h4>Edit this Recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RecipeId)

  @Html.LabelFor(model => model.Name, "Name:" , new { @class="customLabel"})
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Description, "Description:" , new { @class="customLabel"})
  @Html.EditorFor(model => model.Description)

  @Html.Label("Select Restaurant")
  @Html.DropDownList("RestaurantId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Recipes", "Index",null, null, new { @class="htmlButton"})</p>