@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Recipe

<h1>EDIT:</h1>

<h4>Edit this Recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  <div class="inputspacing">
  @Html.HiddenFor(model => model.RecipeId)

  @Html.LabelFor(model => model.Name, "Name:" , new { @class="customLabel"})
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Description, "Description:" , new { @class="customLabel"})
  @Html.EditorFor(model => model.Description)

  @Html.Label("Select Restaurant")
  @Html.DropDownList("RestaurantId")

  <input class = "saveicon" type="image" img src="https://raw.githubusercontent.com/GarrettHays/images/main/noun-save-5040600.png" style="width:20px;"> <a href="@Url.Action("Delete", "Recipes",  new { id = Model.RecipeId })"><img class = "trashicon" src="https://raw.githubusercontent.com/GarrettHays/images/main/noun-trash-can-2342129.png" style="width:20px;"></a>
  </div>
}
