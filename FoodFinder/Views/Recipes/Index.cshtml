@{
  Layout = "_Layout";
}

@using FoodFinder.Models;
@model List<FoodFinder.Models.Recipe>;

<h1>RECIPES:</h1>

@if (@Model.Count == 0)
{
  <h3>No Recipes have been added yet!</h3>
} 

@foreach (Recipe recipe in Model)
{
  <li>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) | @recipe.JoinEntities2.Count Ingredient(s)</li>
}
<span></span>
<p>@Html.ActionLink("Add new Recipe", "Create", null, null, new { @class="htmlButton"})</p>