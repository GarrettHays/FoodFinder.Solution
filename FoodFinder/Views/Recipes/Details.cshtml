@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Recipe

<h2>Recipe Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Recipe does not belong to any Restaurants</p>
}
else
{
  <h4>Restaurants the Recipe belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Restaurant.Name</li>
    @using (Html.BeginForm("DeleteRestaurant", "Recipes"))
    {
      @Html.Hidden("joinId", @join.RecipeRestaurantId)
      <input type="submit" value="Delete" class="htmlButton"/>
    }
  }
  </ul>
}

@if(@Model.JoinEntities2.Count == 0)
{
  <p>This Recipe does not have any Ingredients</p>
}
else
{
  <h4>Recipe's Ingredients: </h4>
  <ul>
  @foreach(var join in Model.JoinEntities2)
  {
    <li>@Html.ActionLink($"{@join.Ingredient.Name}", "Details", "Ingredients", new { id = @join.Ingredient.IngredientId })</li>
    @using (Html.BeginForm("DeleteIngredient", "Recipes"))
    {
      @Html.Hidden("joinId", @join.IngredientRecipeId)
      <input type="submit" value="Delete" class="htmlButton"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Add a Restaurant", "Create", "Restaurants", new { id = Model.RecipeId }, new { @class ="htmlButton"})
@Html.ActionLink("Add an Ingredient", "Create", "Ingredients", null, new { @class ="htmlButton"})</p>

<p>@Html.ActionLink("Edit Recipe", "Edit", null, new { id = Model.RecipeId }, new { @class ="htmlButton"})
@Html.ActionLink("Delete Recipe", "Delete", null, new { id = Model.RecipeId }, new { @class ="htmlButton"})
@Html.ActionLink("Back to Recipes", "Index",null, null, new { @class ="htmlButton"})</p>