@{
  Layout = "_Layout";
}

@using FoodFinder.Models;
@model List<FoodFinder.Models.Ingredient>;

<h1>Ingredients</h1>

@if (@Model.Count == 0)
{
  <h3>No Ingredients have been added yet!</h3>
} 

@foreach (Ingredient ingredient in Model)
{
  <li>@Html.ActionLink($"{ingredient.Name}", "Details", new { id = ingredient.IngredientId })</li>
}

<span></span>
<p>@Html.ActionLink("Add new Ingredient", "Create", null, null, new { @class="htmlButton"})</p>