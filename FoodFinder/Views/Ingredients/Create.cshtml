@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Ingredient

<h4>Add a new Ingredient</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name:" , new { @class="customLabel"})
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description, "Description:" , new { @class="customLabel"})
  @Html.TextBoxFor(model => model.Description)

  @Html.Label("Select Recipe")
  @Html.DropDownList("RecipeId")

}
  <input type="submit" value="Add new Ingredient" class="htmlButton" />
  @Html.ActionLink("Show all Ingredients", "Index", null, null, new { @class="htmlButton"})