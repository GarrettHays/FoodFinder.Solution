@{
  Layout = "_Layout";
}

@using FoodFinder.Models;

<h1>RESTAURANTS</h1>

@if (@Model.Count == 0)
{
  <h3>No Restaurants have been added yet!</h3>
} 

<ul>
  @foreach(Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name} | {restaurant.Description}", "Details", new { id = restaurant.RestaurantId })</li>
  }
</ul>

<span></span>
<p>@Html.ActionLink("Add new Restaurant", "Create",null, null, new { @class="htmlButton"})</p>