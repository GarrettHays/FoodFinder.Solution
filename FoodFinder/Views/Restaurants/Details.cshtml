@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Restaurant

<h1>RESTAURANT DETAILS:</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Restaurant does not contain any Recipes</p>
}
else
{
  <h4>Recipes the Restaurant contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Recipe.Name</li>
  }
  </ul>
}

  <p>@Html.ActionLink("Add recipe", "Create", "Recipes", null, new { @class="htmlButton"}) | @Html.ActionLink("Edit Restaurant", "Edit", null, new { id = Model.RestaurantId }, new {@class="htmlButton"}) | @Html.ActionLink("Back to Restaurants", "Index",null, null, new { @class="htmlButton"}) | @Html.ActionLink("Delete Restaurant", "Delete", null, new { id = Model.RestaurantId }, new { @class="htmlButton"})</p>