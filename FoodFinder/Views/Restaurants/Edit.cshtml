@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Restaurant

<h1>EDIT:</h1>

<h4>Edit this Restaurant: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)

  @Html.LabelFor(model => model.Name, "Name:" , new { @class="customLabel"})
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description, "Description:" , new { @class="customLabel"})
  @Html.EditorFor(model => model.Description)

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to Restaurants", "Index",null, null, new { @class="htmlButton"})</p>