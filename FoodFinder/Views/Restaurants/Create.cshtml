@{
  Layout = "_Layout";
}

@model FoodFinder.Models.Restaurant

<h1>ADD NEW RESTAURANT:</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name:" , new { @class="customLabel"})
  <br>
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Description, "Description:" , new { @class="customLabel"})
  <br>
  @Html.TextBoxFor(model => model.Description)
  <br>
  <br>
  <input type="submit" value="Add new Restaurant" class="htmlButton"/>
}
